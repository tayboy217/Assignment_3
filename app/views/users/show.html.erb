    <body>
    <main>
    <p id="notice">Signed in successfully.</p>
    <div class="container px-5 px-sm-0">
    <div class="row">
    <div class="col-md-3">
      
      <!--<img class="attachment user profile_image fallback" src="/assets/no_image-72379a4da21cb04a58337cf92d85bc39f8d534cbc78254c2085acaca82236bfa.jpg"><table class="table">-->
    <h2>User info</h2>
    <%= attachment_image_tag(@user, :image, :fill, 100, 100, fallback: "no-image.png", size:"100x100") %>
    <table class='table'>
    <%= form_with model:@user, url:'/users/:id/edit', local:true do |f| %>
    <th><%= f.label :name, "Name", class: "label" %></th>
    <th><%= current_user.name %></th>
    </tr>
    <th><%= f.label :self_introduction, "Introduction", class: "label" %></th>
    <th><%= current_user.self_introduction %></th>
    </tr>
    <% end %>
     </table>
     
   <div class="row">
    <% if @user.id == current_user.id %>
     <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog"  %>
    <% end %>
  <!--<a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_31045" href="/users/31045/edit"></a>-->
　　</div>
　　<h2 class="mt-3">New book</h2>
　 <%= form_with model: @book, url:'/books', local:true do |f| %>
   <div class="form-group">
   <%= f.label :title, class: "label" %>
   <%= f.text_field :title, class: "form-control book_title" %>
   </div>
   <div class="form-group">
   <%= f.label :opinion, class: "label" %>
   <%= f.text_field :opinion, class: "form-control book_body" %>
   </div>
   <div class="form-group">
   <%= f.submit "submit", class: "btn btn-success" %>
    </div>
    </div>
    <% end %>
 <div class='col-md-8 offset-md-1'>
  <h2>Books</h2>
  <table class='table table-hover table-inverse'>
  <thead>
  <tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
  <td><%= attachment_image_tag(@user, :image, fallback: "no-image.png", size:"50x50") %> </td>
  <td><%= book.title%></td>
  <td><%= book.opinion%></td>
  </tr>
  <% end %>
  </tbody>
  </table>
  </div>
  </div>
  </div>
  </main>
